{
    "extends": "idiomatic",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "strict": 0,
        "one-var": [2, {
            "var": "always",
            "let": "never",
            "const": "never"
        }],
        "func-names": 0,
        "vars-on-top": 0
    }
}
